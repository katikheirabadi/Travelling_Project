@page
@model Travellingfront.Pages.SigninModel
@{
    ViewData["Title"] = "Signin page";
}
<head>
    <link href="~/css/Signin/Signin.css" rel="stylesheet" />
</head>
<div class="text-center">

    <div class="banner " >
        <div class="container">
            <div class="banner-text">
                <div class="banner-heading">
                    ثبت نام
                </div>
                <div class="banner-sub-heading">
                   حساب کاربری خود را ایجاد کنید
                </div>
            </div>
        </div>
    </div>
    
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-12">
                </div>
                <div class="col-md-6 col-sm-12">
                    <form asp-route-returnUrl="@Model.ReturnUrl" style="text-align: right;" method="post">
                        <br>
                        <div class="form-group">
                            <label asp-for="Signin.FullName"></label>
                            <input type="text" class="form-control" asp-for="Signin.FullName" placeholder="نام و نام خوانوادگی" id="text" style="text-align: right;">
                            <span asp-validation-for="Signin.FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Signin.Username"></label>
                            <input type="email" class="form-control" asp-for="Signin.Username" placeholder="xxxx@example.com" id="email" style="text-align: right;">
                            <span asp-validation-for="Signin.Username" class="text-danger"></span>

                        </div>

                        <div class="form-group">
                            <label asp-for="Signin.Password"></label>
                            <input type="password" class="form-control" asp-for="Signin.Password" placeholder="رمز عبور خود را وارد کنید" id="pwd" style="text-align: right;">
                            <span asp-validation-for="Signin.Password" class="text-danger"></span>

                        </div>

                        <div class="form-group">
                            <label asp-for="Signin.RePassword"></label>
                            <input asp-for="Signin.RePassword" type="password" class="form-control" placeholder="رمز عبور خود را دوباره وارد کنید" id="pwd" style="text-align: right;">
                            <span asp-validation-for="Signin.RePassword" class="text-danger"></span>

                        </div>

                        <div class="from-group">
                            <label asp-for="Signin.PhoneNumber"></label>
                            <input asp-for="Signin.PhoneNumber" type="text" class="form-control" placeholder="09********" id="text" style="text-align: right;">
                            <span asp-validation-for="Signin.PhoneNumber" class="text-danger"></span>

                        </div>
                        <br>
                        <label asp-for="Signin.FavoriteCountry" class="mr-sm-2" for="inlineFormCustomSelect">کشور مورد علاقه خود انتخاب کنید</label>
                        <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" asp-for="Signin.FavoriteCountry" asp-items="ViewBag.Countries"></select>
                        <br>
                        <br>
                        <label asp-for="Signin.FavoriteCategory" class="mr-sm-2" for="inlineFormCustomSelect">جاذبه گردشگری مورد علاقه خود انتخاب کنید</label>
                        <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" asp-for="Signin.FavoriteCategory" asp-items="ViewBag.categories"></select>
                        <br>
                        <br>
                        <button type="submit" class="btn" style="background-color:#17a2b8; text-align: center;">ثبت نام</button>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <br>
                        <br>
                    </form>
                </div>
                <div class="col-md-3 col-sm-12">
                </div>
            </div>
        </div>
    </section>

</div>
@section Scripts {
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}