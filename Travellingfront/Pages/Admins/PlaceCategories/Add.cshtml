@page
@model Travellingfront.Pages.Admins.PlaceCategories.AddModel
@{
}
<head>
    <link href="~/css/Admin/admin.css" rel="stylesheet" />
    <link href="~/css/Admin/all.css" rel="stylesheet" />
    <link href="~/css/Admin/style.css" rel="stylesheet" />

</head>
<div class="text-center">
    <div class="banner" style="background-image: url('../../adminbg.jpg');">
        <div class="container">
            <div class="banner-text">
                <div class="banner-heading">
                    ایجاد رابطه جاذبه ها و دسسته بندی ها
                </div>
            </div>
        </div>
    </div>
    <div class="body-of-admin">
        <div class="container" style="direction: rtl;">
            <div class="row">
                <div class="col-lg-3 col-md-12">
                    <div class="account-info-box fullsize panel-boxes text-right">
                        <ul class="account-nav fullsize">
                            <li>
                                <a asp-page="../Places/place">
                                    <i class='far fa-map'></i>
                                    جاذبه های گردشگری
                                </a>
                            </li>
                            <li>
                                <a asp-page="../Categories/Category">
                                    <i class='fas fa-layer-group'></i>
                                    دسته بندی
                                </a>
                            </li>
                            <li>
                                <a asp-page="../Countries/Country">
                                    <i class='fas fa-flag'></i>
                                    کشور ها
                                </a>
                            </li>
                            <li>
                                <a asp-page="../Cities/City">
                                    <i class='fas fa-map-marker-alt'></i>
                                    شهر ها
                                </a>
                            </li>
                            <li>
                                <a href="comments.html">
                                    <i class='far fa-comment-alt'></i>
                                    نظرات
                                </a>
                            </li>
                            <li>
                                <a href="rates.html">
                                    <i class='fas fa-star'></i>
                                    رای ها
                                </a>
                            </li>
                            <li>
                                <a asp-page="./ShowAll">
                                    <i class='fas fa-user-clock'></i>
                                    جاذبه و دسته بندی
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9 col-md-12">
                    <div class="account-infos panel-boxes fullsize text-right">
                        <div class="allinfo-heading fullsize">
                            <div>افزودن رابطه</div>
                        </div>
                        <form method="post" style="margin: 20px 39px;">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            < <div class="form-group">
                                <label> دسته بندی :</label>
                                <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" asp-for="NewPlaceCategory.Category" asp-items="ViewBag.Categories"></select>
                                <span asp-validation-for="NewPlaceCategory.Category" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label> جاذبه گردشگری :</label>
                                <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" asp-for="NewPlaceCategory.TuristPlace" asp-items="ViewBag.Places"></select>
                                <span asp-validation-for="NewPlaceCategory.TuristPlace" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">ایجاد</button>
                            @if (Model.State == false)
                            {
                                <div>
                                    <span class="text-danger">@ViewBag.Error</span>
                                </div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}