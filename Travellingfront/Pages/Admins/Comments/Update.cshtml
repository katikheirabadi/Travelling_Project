@page
@model Travellingfront.Pages.Admins.Comments.UpdateModel
@{
}
<head>
    <link href="~/css/Admin/admin.css" rel="stylesheet" />
    <link href="~/css/Admin/all.css" rel="stylesheet" />
    <link href="~/css/Admin/style.css" rel="stylesheet" />

</head>
<div class="text-center">
    <div class="banner" style="background-image: url('../../adminbg.jpg');">
        <div class="container">
            <div class="banner-text">
                <div class="banner-heading">
                    مدیریت نظرات
                </div>
            </div>
        </div>
    </div>
    <div class="body-of-admin">
        <div class="container" style="direction: rtl;">
            <div class="row">
                <div class="col-lg-3 col-md-12">
                    <div class="account-info-box fullsize panel-boxes text-right">
                        <ul class="account-nav fullsize">
                            <li>
                                <a asp-page="../Places/Place">
                                    <i class='far fa-map'></i>
                                    جاذبه های گردشگری
                                </a>
                            </li>
                            <li>
                                <a asp-page="../Categories/Category">
                                    <i class='fas fa-layer-group'></i>
                                    دسته بندی
                                </a>
                            </li>
                            <li>
                                <a asp-page="../Countries/Countries">
                                    <i class='fas fa-flag'></i>
                                    کشور ها
                                </a>
                            </li>
                            <li>
                                <a asp-page="../Cities/City">
                                    <i class='fas fa-map-marker-alt'></i>
                                    شهر ها
                                </a>
                            </li>
                            <li>
                                <a asp-page="./Comment">
                                    <i class='far fa-comment-alt'></i>
                                    نظرات
                                </a>
                            </li>
                            <li>
                                <a asp-page="../Rates/Rate">
                                    <i class='fas fa-star'></i>
                                    رای ها
                                </a>
                            </li>
                            <li>
                                <a href="userlogins.html">
                                    <i class='fas fa-user-clock'></i>
                                    جاذبه و دسته بندی
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9 col-md-12">
                    <div class="account-infos panel-boxes fullsize text-right">
                        <div class="allinfo-heading fullsize">
                            <div>ویرایش نظر</div>
                        </div>
                        <form method="post" style="margin: 20px 39px;">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <input class="form-control" type="text" value="@Model.CommentId" asp-for="updateComment.CommentId">
                                <span asp-validation-for="updateComment.CommentId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>نظر :</label>
                                <textarea class="form-control" rows="5" asp-for="updateComment.Text"></textarea>
                                <span asp-validation-for="updateComment.CommentId" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-success">ویرایش</button>
                            @if(Model.State == false)
                            {
                                <p>@ViewBag.Errore</p>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}