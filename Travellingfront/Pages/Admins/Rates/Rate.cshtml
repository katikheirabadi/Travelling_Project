@page
@model Travellingfront.Pages.Admins.Rates.RateModel
@{
}
<head>
    <link href="~/css/Admin/admin.css" rel="stylesheet" />
    <link href="~/css/Admin/all.css" rel="stylesheet" />
    <link href="~/css/Admin/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<div class="text-center">
    <div class="banner" style="background-image:url('../../adminbg.jpg');">
        <div class="container">
            <div class="banner-text">
                <div class="banner-heading">
                    مدیریت رای ها
                </div>
            </div>
        </div>
    </div>

    <div class="body-of-admin">
        <div class="container" style="direction: rtl;">
            <div class="row">
                <div class="col-lg-3 col-md-12">
                    <partial name="_AdminNavbar" />
                </div>
                <div class="col-lg-9 col-md-12">
                    <div class="account-infos panel-boxes fullsize text-right">
                        <div class="jazebe allinfo-heading fullsize">
                            <div>رای ها</div>
                        </div>
                        <table class="table">
                            <thead class="thead-dark">
                                <tr>
                                    <th>شناسه</th>
                                    <th>رای</th>
                                    <th>شناسه کاربر</th>
                                    <th>شناسه جاذبه</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Rates.Count; i++)
                                {
                                    <tr>
                                        <td>@Model.Rates[i].Id</td>
                                        <td>
                                            @for (int j = 0; j < Model.Rates[i].Rate; j++)
                                            {
                                                <span class="fa fa-star checked"></span>
                                            }
                                            @while (5 - Model.Rates[i].Rate > 0)
                                            {
                                                <span class="fa fa-star "></span>
                                                Model.Rates[i].Rate++;
                                            }
                                        </td>
                                        <td>@Model.Rates[i].UserId</td>
                                        <td>@Model.Rates[i].PlaceId</td>
                                        <td>
                                            <a asp-page="./Delete"  asp-route-id="@Model.Rates[i].Id" class="btn btn-danger" >حذف</a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>