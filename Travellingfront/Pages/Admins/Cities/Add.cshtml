@page
@model Travellingfront.Pages.Admins.Cities.AddModel
@{
}
<head>
    <link href="~/css/Admin/admin.css" rel="stylesheet" />
    <link href="~/css/Admin/all.css" rel="stylesheet" />
    <link href="~/css/Admin/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<div class="text-center">
    <div class="banner" style="background-image:url('../../adminbg.jpg');">
        <div class="container">
            <div class="banner-text">
                <div class="banner-heading">
                    اضافه کردن شهر
                </div>
            </div>
        </div>
    </div>
    <div class="body-of-admin">
        <div class="container" style="direction: rtl;">
            <div class="row">
                <div class="col-lg-3 col-md-12">
                    <partial name="_AdminNavbar" />
                </div>
                <div class="col-lg-9 col-md-12">
                    <div class="account-infos panel-boxes fullsize text-right">
                        <div class="allinfo-heading fullsize">
                            <div>افزودن شهر</div>
                        </div>
                        <form method="post" style="margin: 20px 39px;">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label>نام :</label>
                                <input type="text" asp-for="NewCity.City" class="form-control">
                                <span asp-validation-for="NewCity.City" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label> کشور :</label>
                                <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" asp-for="NewCity.Country" asp-items="ViewBag.countries">
                                </select>
                                <span asp-validation-for="NewCity.Country" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>تصویر : </label>
                                <input type="text" asp-for="NewCity.Image" class="form-control">
                                <span asp-validation-for="NewCity.Image" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">ایجاد</button>
                            @if (Model.State == false)
                            {
                                <div>
                                    <span class="text-danger">@ViewBag.Error</span>
                                </div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}