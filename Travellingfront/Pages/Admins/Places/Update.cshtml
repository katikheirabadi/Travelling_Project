@page
@model Travellingfront.Pages.Admins.Places.UpdateModel
@{
}
<head>
    <link href="~/css/Admin/admin.css" rel="stylesheet" />
    <link href="~/css/Admin/all.css" rel="stylesheet" />
    <link href="~/css/Admin/style.css" rel="stylesheet" />

</head>
<div class="text-center">

    <div class="banner" style="background-image:url('../../adminbg.jpg');">
        <div class="container">
            <div class="banner-text">
                <div class="banner-heading">
                    @Model.Place.Name ویرایش
                </div>
            </div>
        </div>
    </div>

    <div class="body-of-admin">
        <div class="container" style="direction: rtl;">
            <div class="row">
                <div class="col-lg-3 col-md-12">
                    <div class="account-info-box fullsize panel-boxes text-right">
                      
                        <ul class="account-nav fullsize">
                            <li>
                                <a asp-page="./Place">
                                    <i class='far fa-map'></i>
                                    جاذبه های گردشگری
                                </a>
                            </li>
                            <li>
                                <a href="categories.html">
                                    <i class='fas fa-layer-group'></i>
                                    دسته بندی
                                </a>
                            </li>
                            <li>
                                <a href="countries.html">
                                    <i class='fas fa-flag'></i>
                                    کشور ها
                                </a>
                            </li>
                            <li>
                                <a href="cities.html">
                                    <i class='fas fa-map-marker-alt'></i>
                                    شهر ها
                                </a>
                            </li>
                            <li>
                                <a href="comments.html">
                                    <i class='far fa-comment-alt'></i>
                                    نظرات
                                </a>
                            </li>
                            <li>
                                <a href="rates.html">
                                    <i class='fas fa-star'></i>
                                    رای ها
                                </a>
                            </li>
                            <li>
                                <a href="users.html">
                                    <i class='fas fa-id-card'></i>
                                    کاربران
                                </a>
                            </li>
                            <li>
                                <a href="userlogins.html">
                                    <i class='fas fa-user-clock'></i>
                                    لاگین ها
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9 col-md-12">
                    <div class="account-infos panel-boxes fullsize text-right">
                        <div class="allinfo-heading fullsize">
                            <div>ویرایش جاذبه گردشگری</div>
                        </div>
                        <form method="post" style="margin: 20px 39px;">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label>نام :</label>
                                <input type="text" class="form-control" asp-for="UpdatePlace.Place" value=@Model.Place.Name >
                                <span asp-validation-for="UpdatePlace.Place" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>شرح :</label>
                                <textarea class="form-control" rows="5" asp-for="UpdatePlace.NewDescription"></textarea>
                                <span asp-validation-for="UpdatePlace.NewDescription" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>تصویر :</label>
                                <textarea class="form-control" rows="5" asp-for="UpdatePlace.NewImage"></textarea>
                                <span asp-validation-for="UpdatePlace.NewImage" class="text-danger"></span>
                            </div>
                           
                            <button type="submit" class="btn btn-success">ویرایش</button>
                            @if (Model.State == false)
                            {
                                <div>
                                    <span class="text-danger">@ViewBag.Error</span>
                                </div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}