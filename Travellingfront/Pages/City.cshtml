@page
@model Travellingfront.Pages.CityModel
@{
    ViewData["Title"] = "City";
}
<head>
    <link href="~/css/City/City.css" rel="stylesheet" />
</head>
<div class="text-center">
    <div class="banner" style="background-image:url(@Model.City.Image)">
        <div class="container">
            <div class="banner-text">
                <div class="banner-heading">
                    جاذبه های گردشگری @Model.City.Name
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        @for (int i = 0; i < Model.City.Places.Count; i++)
        {
            <div class="row country-item-row">
                <div class="col-xl-9 text-right">
                    <h3>
                        <a asp-page="/Place" asp-route-id="@Model.City.Places[i].Id">
                            @Model.City.Places[i].Name
                        </a>
                    </h3>
                    <p class="country-item-p">
                        @Model.City.Places[i].Description
                    </p>

                    <span  class="text text-info">تعداد کامنت : @Model.City.Places[i].Comments</span>
                    <span  class="text text-info">تعداد بازدید : @Model.City.Places[i].Visit</span>
                    @for (int k = 0; k < Convert.ToInt32(Model.City.Places[i].AverageRates); k++)
                    {
                        <span class="fa fa-star checked"></span>
                    }
                    @while (Model.City.Places[i].AverageRates < 5)
                    {
                        <span class="fa fa-star"></span>
                        Model.City.Places[i].AverageRates++;
                    }
                </div>
                <div class="col-xl-3 text-center">
                    <img src='~/image/@Model.City.Places[i].Image' style=" width: 300px; height: 280px" class="country-item-image justify-content-center myimage">
                </div>
            </div>

        }
    </div>
</div>
