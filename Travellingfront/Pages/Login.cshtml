@page
@model Travellingfront.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}
<head>
    <link href="~/css/Login/Login.css" rel="stylesheet" />
</head>
<div class="text-center">
    <div class="banner  ">
        <div class="container">
            <div class="banner-text">
                <div class="banner-heading">
                   ورود به حساب کاربری
                </div>
                <div class="banner-sub-heading">
                    به حساب خود وارد شوید
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <form style="text-align: right;">
                    
                    <br>
                    <div class="form-group">
                        <label for="email">نام کاربری(ایمیل)</label>
                        <input type="email" class="form-control" placeholder="xxxx@example.com" id="email" style="text-align: right;">
                    </div>

                    <div class="form-group">
                        <label for="pwd">رمز عبور</label>
                        <input type="password" class="form-control" placeholder="رمز عبور خود را وارد کنید" id="pwd" style="text-align: right;">
                    </div>
                    <br>
                    <button type="submit" class="btn" style="background-color:#17a2b8; text-align: center;">ثبت نام</button>
                    <br>
                    <br>
                    <br>
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</div>
