<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Travellingfront</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*<link rel="stylesheet" href="~/css/site.css" />*@
    <link href="~/css/Home/Home.css" rel="stylesheet" />
    <link href="~/css/fontawesome/all.min.css" rel="stylesheet" />
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top" id="banner" style="background-color: rgba(0, 0, 0, 0.5);">
            <div class="container">
                <div class="row">
                    <button type="button" class="btn btn-light left-b">ثبت نام</button>
                    <button type="button" class="btn btn-outline-light">ورود</button>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#">درباره ما</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                سایر کشور ها
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">ترکیه</a>
                                <a class="dropdown-item" href="#">آمریکا</a>
                                <a class="dropdown-item" href="#">انگلستان</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">ایران</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                جاذبه های گردشگری
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">پربازدیدترین ها</a>
                                <a class="dropdown-item" href="#">محبوب ترین ها</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">صفحه اصلی</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Travellingfront - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
